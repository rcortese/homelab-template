# Media instance vars (copy with env/common.example.env).
# Replace `APP_` with your service prefix.
# Media host path.
MEDIA_HOST_PATH=/mnt/data
# Public port.
APP_MEDIA_PORT=8081
# Data path (relative).
# APP_DATA_DIR=data/media/app
# Data path (absolute).
# APP_DATA_DIR_MOUNT=/mnt/user/media/app
# UID override.
# APP_DATA_UID=1000
# GID override.
# APP_DATA_GID=1000
# Internal IP (app).
APP_NETWORK_IPV4=172.20.0.11
# Internal IP (monitoring).
MONITORING_NETWORK_IPV4=172.20.0.21
# Worker concurrency.
# WORKER_MEDIA_CONCURRENCY=1
# Internal IP (worker).
WORKER_MEDIA_NETWORK_IPV4=172.20.0.31
# Media cache volume.
MEDIA_CACHE_VOLUME_NAME=media_cache
